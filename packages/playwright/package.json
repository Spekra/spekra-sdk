{
  "name": "@spekra/playwright",
  "version": "0.0.0",
  "description": "Playwright test reporter for Spekra - send test results to the Spekra platform",
  "author": "Spekra",
  "license": "MIT",
  "keywords": [
    "playwright",
    "testing",
    "reporter",
    "spekra",
    "test-results",
    "ci",
    "continuous-integration"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/spekra/spekra-sdk.git",
    "directory": "packages/playwright"
  },
  "homepage": "https://spekra.dev",
  "bugs": {
    "url": "https://github.com/spekra/spekra-sdk/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:load": "vitest run tests/load",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --noEmit -p tsconfig.test.json",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "size": "size-limit",
    "generate:types": "openapi-typescript openapi.json -o tests/generated/api-types.ts",
    "prism:start": "prism mock openapi.json --port 4010 --host 127.0.0.1",
    "prepublishOnly": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm typecheck:tests && pnpm test && pnpm build && pnpm size"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@size-limit/file": "^11.0.0",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "jiti": "^2.4.2",
    "msw": "^2.0.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.1.0",
    "size-limit": "^11.0.0",
    "tsdown": "^0.18.0",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.19.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
